{% extends 'base_admin.html.twig' %}


{% block title %}Actualites{% endblock %}

{% block body %}
<div class="page-wrapper">
		<div class="page-breadcrumb">
			<h1 class="text-center">
				Actualités
			</h1>
		</div>

		<table class="table table-hover">

			<tbody>
            <tr>
                <th class="fw-bold">Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th class="fw-bold">Contenu</th>
                <td>{{ actualite.contenu }}</td>
            </tr>
            <tr>
                <th class="fw-bold">Date</th>
                <td>{{ actualite.createdAt ? actualite.createdAt|date("m/d/Y") : '' }}</td>
            </tr>
            <tr>
                <th class="fw-bold">Auteur</th>
                <td>{{ actualite.auteur }}</td>
            </tr>
            <tr>
                <th class="fw-bold">Image</th>
                <td>{{ actualite.image }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-start align-items-center">
			<span class="mx-1 px-3">
				<a href="{{ path('app_actualites_index') }}">Retour à la liste</a>
			</span>
			<span class="mx-1 px-3">
				<a href="{{ path('app_actualites_edit', {'id': actualite.id}) }}" class="btn btn-warning">Modifier</a>
			</span>
			{# <a href="{{ path('app_user_delete', {'id': user.id} )}}" class="btn btn-danger">Supprimer</a> #}
			<span class="mx-1 px-3">{{ include('actualites/_delete_form.html.twig') }}</span>

		</div>
	</div>
{% endblock %}
