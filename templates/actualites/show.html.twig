{% extends 'base_admin.html.twig' %}


{% block title %}Actualites{% endblock %}

{% block body %}
    <h1>Actualites</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ actualite.contenu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ actualite.date ? actualite.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ actualite.auteur }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ actualite.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_actualites_index') }}">back to list</a>

    <a href="{{ path('app_actualites_edit', {'id': actualite.id}) }}">edit</a>

    {{ include('actualites/_delete_form.html.twig') }}
{% endblock %}
