{% extends 'base.html.twig' %}
{% block title %}Login {% endblock %}

{% block MainBody %}
	

    
		
		<!-- contact section start -->
		<div class="contact_section layout_padding">
			<div class="container-fluid">
				<h1 class="what_taital">Se connecter</h1>
				<p class="amet_text">entrer votre email et votre mot de passe
				</p>
				<div class="contact_section2">
					
						<div class="row justify-content-center align-items-center h-100">
                        <div class="col col-sm-6 ">
							<div class="mail_section">
                                <form method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="mb-3">
                                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% endif %}
                                    <input type="email" value="{{ last_username }}" placeholder="email" name="email" id="inputEmail" class="mail_text_1" autocomplete="email" required autofocus>
                                    <input type="password" placeholder="mot de passe" name="password" id="inputPassword" class="mail_text_1" autocomplete="current-password" required>                       
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <div class="send_bt">
                                        <button type="submit" class="btn btn-danger">se connecter</button>
                                    </div>
                                </form>
							</div>
                            </div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- contact section end -->
		
	{% endblock %}








